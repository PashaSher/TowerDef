<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMap">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main"
                android:layout_width="2000dp"
                android:layout_height="3000dp">

                <!-- Дорожки -->
                <View
                    android:id="@+id/track1"
                    android:layout_width="50dp"
                    android:layout_height="3000dp"
                    android:layout_marginStart="100dp"
                    android:background="#8B4513"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/track2"
                    android:layout_width="50dp"
                    android:layout_height="3000dp"
                    android:layout_marginStart="100dp"
                    android:background="#8B4513"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/track1"/>

                <!-- Изображение зомби -->
                <ImageView
                    android:id="@+id/red_dot1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_marginStart="125dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/red_dot2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginStart="275dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/track1"/>

                <!-- Вышки -->
                <Button
                    android:id="@+id/tower_spot1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="300dp"
                    android:text="Вышка 1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="50dp"/>

                <Button
                    android:id="@+id/tower_spot2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="600dp"
                    android:text="Вышка 2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/track2"/>





                <!-- Кнопки под вышками -->
                <Button
                    android:id="@+id/btn_under_tower1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Улучшить"
                    app:layout_constraintTop_toBottomOf="@id/tower_spot1"
                    app:layout_constraintStart_toStartOf="@id/tower_spot1"/>

                <Button
                    android:id="@+id/btn_under_tower2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Улучшить"
                    app:layout_constraintTop_toBottomOf="@id/tower_spot2"
                    app:layout_constraintStart_toStartOf="@id/tower_spot2"/>



             >

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
